<div class="container">
    <h2>‚ûï Nova D√≠vida</h2>
    <div class="input-group">
        <input type="text" id="nome" placeholder="üë§ Nome da Pessoa">
        <input type="text" id="local" placeholder="üìç Local (ex: Loja do Z√©)">
        <input type="number" id="valor" placeholder="üí∞ Valor da Parcela (R$)">
        <input type="number" id="parcelas" placeholder="üî¢ Qtde de Parcelas">
    </div>
    <button class="btn btn-add" onclick="adicionarDivida()">Salvar D√≠vida</button>

    <div class="lista-container">
        <h3 style="color: var(--primary);">üìã Devedores</h3>
        <div id="lista-dividas"></div>
    </div>
</div>

<div id="modal-nf" class="modal">
    <div class="modal-content">
        <div id="conteudo-nf" class="nf-box">
            <h3 style="text-align: center; margin-bottom: 5px;">COMPROVANTE</h3>
            <p style="text-align: center; font-size: 0.8em; color: #888; margin-bottom: 20px;">Gerado via Monitor de D√≠vidas</p>
            
            <p><strong>Devedor:</strong> <span id="nf-nome"></span></p>
            <p><strong>Origem:</strong> <span id="nf-local"></span></p>
            <p><strong>Plano:</strong> <span id="nf-parcelas"></span>x de R$ <span id="nf-valor-p"></span></p>
            
            <div class="total-destaque">
                TOTAL: R$ <span id="nf-total"></span>
            </div>
        </div>
        <button class="btn btn-share" onclick="compartilharNF()">üì≤ Enviar via WhatsApp</button>
        <button class="btn btn-del" onclick="removerDivida()">üóëÔ∏è Excluir Registro</button>
        <button class="btn" onclick="fecharModal()" style="background:#ddd;">Fechar</button>
    </div>
</div>

<script>
    let dividas = JSON.parse(localStorage.getItem('dividas')) || [];
    let dividaAtualIndex = null;

    function salvar() {
        localStorage.setItem('dividas', JSON.stringify(dividas));
        renderizar();
    }

    function adicionarDivida() {
        const nome = document.getElementById('nome').value;
        const local = document.getElementById('local').value;
        const valor = document.getElementById('valor').value;
        const parcelas = document.getElementById('parcelas').value;

        if(!nome || !valor) return alert("Por favor, preencha o nome e o valor!");

        dividas.push({ 
            nome, 
            local: local || "Geral", 
            valor: parseFloat(valor), 
            parcelas: parseInt(parcelas) || 1 
        });
        
        salvar();
        limparCampos();
    }

    function renderizar() {
        const lista = document.getElementById('lista-dividas');
        lista.innerHTML = '';
        dividas.forEach((d, index) => {
            const total = (d.valor * d.parcelas).toLocaleString('pt-BR', {minimumFractionDigits: 2});
            lista.innerHTML += `
                <div class="card" onclick="abrirNF(${index})">
                    <div class="card-info">
                        <strong>${d.nome}</strong><br>
                        <small>${d.local}</small>
                    </div>
                    <div class="card-price">R$ ${total}</div>
                </div>`;
        });
    }

    function abrirNF(index) {
        dividaAtualIndex = index;
        const d = dividas[index];
        const total = (d.valor * d.parcelas).toLocaleString('pt-BR', {minimumFractionDigits: 2});
        
        document.getElementById('nf-nome').innerText = d.nome;
        document.getElementById('nf-local').innerText = d.local;
        document.getElementById('nf-parcelas').innerText = d.parcelas;
        document.getElementById('nf-valor-p').innerText = d.valor.toFixed(2);
        document.getElementById('nf-total').innerText = total;
        
        document.getElementById('modal-nf').style.display = 'flex';
    }

    function fecharModal() { document.getElementById('modal-nf').style.display = 'none'; }

    function removerDivida() {
        if(confirm("Deseja realmente excluir esta d√≠vida?")) {
            dividas.splice(dividaAtualIndex, 1);
            salvar();
            fecharModal();
        }
    }

    function compartilharNF() {
        const d = dividas[dividaAtualIndex];
        const total = (d.valor * d.parcelas).toLocaleString('pt-BR', {minimumFractionDigits: 2});
        const texto = `*EXTRATO DE D√çVIDA*%0A--------------------------%0A*Cliente:* ${d.nome}%0A*Local:* ${d.local}%0A*Parcelamento:* ${d.parcelas}x de R$ ${d.valor.toFixed(2)}%0A--------------------------%0A*VALOR TOTAL:* R$ ${total}%0A--------------------------`;
        window.open(`https://api.whatsapp.com/send?text=${texto}`, '_blank');
    }

    function limparCampos() {
        document.getElementById('nome').value = '';
        document.getElementById('local').value = '';
        document.getElementById('valor').value = '';
        document.getElementById('parcelas').value = '';
    }

    renderizar();
</script>
</body>
